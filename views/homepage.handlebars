{{#each posts as |post| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>{{post.title}}</h2>
  </div>
  <div class="col-md-6">
    <p>{{post.content}}</p>
  </div>
</div>
{{/each}}
<div>
  <input value="post name here" id="post-name"/>
  <textarea id="post-area">Write your post here</textarea>
  <button class="btn btn-primary" id="post-btn">Post</button>
</div>